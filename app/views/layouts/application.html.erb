<!DOCTYPE html>
<html>
<head>
  <title>GoalsApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if logged_in? %>
  <%= current_user.username %><br>
<% else %>
  <%= link_to " To Log In", new_session_url %><br>
  <%= link_to "To Sign Up", new_user_url %><br>
<% end %>

<% flash[:errors] && flash[:errors].each do |error| %>
  <%= error %><br>
<% end %>

<%= yield %>

</body>
</html>
